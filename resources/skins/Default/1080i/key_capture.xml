<?xml version="1.0" encoding="UTF-8"?>
<window>
    <controls>
        <control type="group">
            <left>460</left>
            <top>360</top>
            <width>1000</width>
            <height>300</height>

            <animation type="WindowOpen" reversible="false">
                <effect type="fade" start="0" end="100" time="200" tween="cubic" easing="in"/>
            </animation>

            <animation type="WindowClose" reversible="false">
                <effect type="fade" start="100" end="0" time="200" tween="cubic" easing="in"/>
            </animation>

            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>100%</width>
                <height>100%</height>
                <texture colordiffuse="CC000000">$INFO[Window.Property(texture.white)]</texture>
            </control>

            <control type="label">
                <left>40</left>
                <top>40</top>
                <width>920</width>
                <height>60</height>
                <font>font20</font>
                <textcolor>ffffffff</textcolor>
                <label>$INFO[Window.Property(key_capture.title),$ADDON[plugin.video.seren 30670]]</label>
                <align>center</align>
            </control>

            <control type="label">
                <left>40</left>
                <top>120</top>
                <width>920</width>
                <height>60</height>
                <font>font14</font>
                <textcolor>ccffffff</textcolor>
                <label>$INFO[Window.Property(key_capture.description),$ADDON[plugin.video.seren 30669]]</label>
                <align>center</align>
            </control>
        </control>
    </controls>
</window>
